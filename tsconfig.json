    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "target": "ES5"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
